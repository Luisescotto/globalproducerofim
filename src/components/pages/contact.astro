---
import { getI18N } from "@/i18n";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<style>
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-content: center;
  }
</style>

<div
  class="flex w-full h-screen max-h-96 overflow-hidden text-left z-0 relative min-h-96 justify-items-start items-end"
>
  <div class="z-30 relative pb-6 px-10 text-white">
    <div class="flex flex-col text-white">
      <ul class="text-[min(6vw,40px)] font-bold">
        <li class="flex">
          <span>{i18n.CONTACT.BANNER.P1}</span>
        </li>
        <li class="flex">
          <span>{i18n.CONTACT.BANNER.P2}</span>
        </li>
        <li class="flex">
          <span>{i18n.CONTACT.BANNER.P3}</span>
        </li>
      </ul>
    </div>
  </div>

  <div class="absolute top-0 bottom-0 w-full h-full z-10">
    <Image
      class="object-center h-full w-full object-cover"
      src="/heroBgProducts.webp"
      alt="Dominican agro-exporter of tropical and oriental produce - Get in touch with us for shipments to Europe, the Americas, and the Caribbean"
      width={1440}
      height={953}
      format="webp"
      quality={"mid"}
    />
  </div>
</div>
<main
  aria-label="us"
  class="flex flex-col w-full h-auto items-start justify-start text-center mx-auto bg-white"
>
  <div
    class="flex flex-col h-auto w-full justify-center text-center items-cente mx-auto py-4"
  >
    <h3 class="pb-2 text-3xl text-title font-bold px-6">
      {i18n.CONTACT.TITLE}
    </h3>
    <p class="text-title/80 px-6">
      {i18n.CONTACT.TAGLINE}
    </p>
    <div class="flex py-8 w-full h-auto justify-center items-center group">
      <a
        href="https://www.google.com/maps"
        target="_blank"
        class="flex justify-center items-center self-center w-full h-auto relative overflow-hidden"
      >
        <Image
          class="w-full h-full rounded border-primary shadow-lg"
          src="/maps.webp"
          alt="Mapa de la ubicaciÃ³n de Trading Global Produce Rofim"
          width={1400}
          height={646}
          format="webp"
          quality={"mid"}
        />
        <div
          class="absolute h-full w-full bg-black/50 items-center justify-center hidden group-hover:flex transition-all duration-1500 ease-in-out"
        >
          <p class="text-white text-2xl md:text-4xl">
            {i18n.CONTACT.GOOGLE_MAPS_LINK}
          </p>
        </div>
      </a>
    </div>
  </div>
  <h1 class="text-white font-bold text-2xl py-8 bg-secondary w-full">
    {i18n.CONTACT.INFO.TITLE}
  </h1>
  <div
    class="h-auto w-full text-center items-center cards-grid flex-wrap bg-secondary pb-12 gap-4 px-12"
  >
    <a
      href="tel:+18093832022"
      class="flex flex-col w-full h-full bg-white hover:bg-linear-to-b from-white to-primary/20 justify-around items-center p-8 rounded shadow-md"
    >
      <Icon
        name="phone"
        size={50}
        class="text-secondary bg-green-100 rounded-full p-2"
      />

      <h2 class="text-2xl font-medium py-1.5 leading-tight text-secondary">
        {i18n.CONTACT.INFO.CARDS.PHONE.TITLE}
      </h2>
      <p class="text-xl text-title">{i18n.CONTACT.INFO.CARDS.PHONE.P}</p>
    </a>
    <a
      href="mailto:joe_rofim@hotmail.com"
      class="flex flex-col w-full h-full bg-white hover:bg-linear-to-b from-white to-primary/20 justify-around items-center p-8 rounded shadow-md"
    >
      <Icon
        name="mail"
        size={50}
        class="text-secondary bg-green-100 rounded-full p-2"
      />
      <h2 class="text-2xl font-medium py-1.5 leading-tight text-secondary">
        {i18n.CONTACT.INFO.CARDS.EMAIL.TITLE}
      </h2>
      <p class="text-xl sm:text-sm lg:text-xl text-title">
        &#106;&#111;&#101;&#95;&#114;&#111;&#102;&#105;&#109;&#64;&#104;&#111;&#116;&#109;&#97;&#105;&#108;&#46;&#99;&#111;&#109;
      </p>
    </a>
    <article
      class="flex flex-col w-full h-full bg-white hover:bg-linear-to-b from-white to-primary/20 justify-around items-center p-8 rounded shadow-md"
    >
      <Icon
        name="location"
        size={50}
        class="text-secondary bg-green-100 rounded-full p-2"
      />
      <h2 class="text-2xl font-medium py-1.5 leading-tight text-secondary">
        {i18n.CONTACT.INFO.CARDS.LOCATION.TITLE}
      </h2>
      <p class="text-lg text-title">
        {i18n.CONTACT.INFO.CARDS.LOCATION.P}
      </p>
    </article>
    <a
      href="https://drive.google.com/file/d/1lmR6_0v0gq2g_zisNjtIdXSHKal9EWel/view?usp=drive_link"
      target="_blank"
      class="flex flex-col w-full h-full bg-white hover:bg-linear-to-b from-white to-primary/20 justify-around items-center p-8 rounded shadow-md"
    >
      <Icon
        name="download"
        size={50}
        class="text-secondary bg-green-100 rounded-full p-2"
      />
      <h2 class="text-2xl font-medium py-1.5 leading-tight text-secondary">
        {i18n.CONTACT.INFO.CARDS.DOWNLOAD.TITLE}
      </h2>
      <p
        class="text-md text-secondary border-2 border-secondary rounded px-3 py-2"
      >
        {i18n.CONTACT.INFO.CARDS.DOWNLOAD.P}
      </p>
    </a>
  </div>
</main>
